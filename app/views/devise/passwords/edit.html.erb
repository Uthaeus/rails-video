<div class='login-container'>
  <div class='login-card'>

    <h2 class='text-center'>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-input' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-input' %>
      </div>

      <div class="form-group">
        <%= f.submit "Change my password", class: 'form-btn' %>
      </div>
    <% end %>
    <%= link_to "Back Home", root_path %>
    <% if logged_in?(:site_admin) %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
